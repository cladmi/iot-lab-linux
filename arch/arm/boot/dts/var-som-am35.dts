/dts-v1/;

#include "am3517.dtsi"

/ {
	model = "Variscite SOM AM35 - IoT-LAB";
	compatible = "var,am35", "ti,am3517", "ti,omap3";

	memory {
		device_type = "memory";
		reg = <0x80000000 0x10000000>; /* 256 MB */
	};

	vmmc_fixed: vmmc {
		compatible = "regulator-fixed";
		regulator-name = "vmmc_fixed";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
	};

	/* Adapted from 'omap3-beagle.dts'
	 *
	 * gpio_NUM = <&gpio(NUM / 32 +1) (NUM % 32) GPIO_ACTIVE_LOW>
	 */
	hsusb1_phy: hsusb1_phy {
		compatible = "usb-nop-xceiv";
		//pinctrl-names = "default";
		//pinctrl-0 = <&hsusb1_rst_pins>;
		reset-gpios = <&gpio5 26 GPIO_ACTIVE_LOW>;	/* gpio_154 */
		#phy-cells = <0>;
	};
	hsusb2_phy: hsusb2_phy {
		compatible = "usb-nop-xceiv";
		//pinctrl-names = "default";
		//pinctrl-0 = <&hsusb2_rst_pins>;
		reset-gpios = <&gpio5 24 GPIO_ACTIVE_LOW>;	/* gpio_152 */
		#phy-cells = <0>;
	};
};


&omap3_pmx_core {
	/* https://www.ti.com/lit/ug/sprugr0c/sprugr0c.pdf
	 * Table 6-5. Core and Wakeup Control Module Pad Configuration Registers(continued)
	 * Page 625
	 */
	pinctrl-names = "default";
	pinctrl-0 = <&hsusb1_rst_pins &hsusb2_rst_pins>;

	hsusb1_rst_pins: pinmux_hsusb1_rst_pins {
		pinctrl-single,pins = <
			OMAP3_CORE1_IOPAD(0x2188, PIN_OUTPUT | MUX_MODE4)	/* mcbsp4_clkx.gpio_154 */
		>;
	};
	hsusb2_rst_pins: pinmux_hsusb2_rst_pins {
		pinctrl-single,pins = <
			OMAP3_CORE1_IOPAD(0x2184, PIN_OUTPUT | MUX_MODE4)	/* mcbsp4_dx.gpio_152 */
		>;
	};
};

&davinci_emac {
	status = "okay";
	local-mac-address = [ f8 dc 7a 01 99 69 ];
};

&davinci_mdio {
	status = "okay";
};

&i2c1 {
	clock-frequency = <400000>;
	rtc@68 {
		compatible = "dallas,ds1307";
		reg = <0x68>;
	};
};

&i2c2 {
	clock-frequency = <400000>;
};

&i2c3 {
	clock-frequency = <400000>;
};


&gpmc {
	/* Copied from am3517-som.dtsi in kernel 5.4
	 * Linux,mtd-name adapted from what original boot was saying
	 *
	 * Currently always read writeâ€¦
	 * No idea how to change it.
	 * Could be just completely removed disabled in production
	 */
	ranges = <0 0 0x30000000 0x1000000>;	/* CS0: 16MB for NAND */

	nand@0,0 {
		/*
		 * nand: device found, Manufacturer ID: 0x2c, Chip ID: 0xca
		 * nand: Micron MT29F2G16ABAEAWP
		 * nand: 256 MiB, SLC, erase size: 128 KiB, page size: 2048, OOB size: 64
		 * nand: using OMAP_ECC_BCH8_CODE_HW_DETECTION_SW
		 */
		compatible = "ti,omap2-nand";
		linux,mtd-name = "micron,mt29f2g16abaeawp";
		reg = <0 0 4>; /* CS0, offset 0, IO size 4 */
		nand-bus-width = <16>;
		ti,nand-ecc-opt = "bch8";
		gpmc,sync-clk-ps = <0>;
		gpmc,cs-on-ns = <0>;
		gpmc,cs-rd-off-ns = <44>;
		gpmc,cs-wr-off-ns = <44>;
		gpmc,adv-on-ns = <6>;
		gpmc,adv-rd-off-ns = <34>;
		gpmc,adv-wr-off-ns = <44>;
		gpmc,we-off-ns = <40>;
		gpmc,oe-off-ns = <54>;
		gpmc,access-ns = <64>;
		gpmc,rd-cycle-ns = <82>;
		gpmc,wr-cycle-ns = <82>;
		gpmc,wr-access-ns = <40>;
		gpmc,wr-data-mux-bus-ns = <0>;
		gpmc,device-width = <2>;
		#address-cells = <1>;
		#size-cells = <1>;

		/*
		 * Creating 5 MTD partitions on "omap2-nand.0":
		 * 0x000000000000-0x000000080000 : "X-Loader"
		 * 0x000000080000-0x000000240000 : "U-Boot"
		 * 0x000000240000-0x000000280000 : "U-Boot Env"
		 * 0x000000280000-0x000000780000 : "Kernel"
		 * 0x000000780000-0x000010000000 : "File System"
		 */
		partition@0 {
			label = "X-Loader";
			reg = <0 0x80000>;
		};
		partition@0x80000 {
			label = "U-Boot";
			reg = <0x80000 0x1c0000>;
		};
		partition@0x1c0000 {
			label = "U-Boot Env";
			reg = <0x240000 0x40000>;
		};
		partition@0x280000 {
			label = "Kernel";
			reg = <0x280000 0x500000>;
		};
		partition@0x780000 {
			label = "Filesystem";
			reg = <0x780000 0xf880000>;
		};
	};
};

&usbhshost {
	port1-mode = "ehci-phy";
	port2-mode = "ehci-phy";
};
&usbhsehci {
	phys = <&hsusb1_phy &hsusb2_phy>;
};

&mmc1 {
	vmmc-supply = <&vmmc_fixed>;
	bus-width = <4>;
};

&mmc2 {
	status = "disabled";
};

&mmc3 {
	status = "disabled";
};


&aes {
    status = "disabled";
};
&sham {
    status = "disabled";
};
&smartreflex_core {
    status = "disabled";
};
&usb_otg_hs {
    status = "disabled";
};
